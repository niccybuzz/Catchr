<!DOCTYPE html>
<html>
  <head>
    <%- include (`partials/header.ejs`) %>
    <title>Browse All Cards</title>
  </head>
  <!-- Body -->
  <body class="box-border h-full bg-magmalight font-roboto">
    <!-- Header Bar -->
    <%- include (`partials/nav.ejs`) %>
    
    <!-- Main grid containing all cards -->
    <div
      class="grid justify-center items-center px-4 pt-12 lg:px-36 ws:px-96 h-full grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 ws:grid-cols-5  opacity-0 transition-opacity duration-500"
      id="gridDiv"
    >
      <!-- Iterating through each pokemon (row in data) and creates a card object each -->
      <% cards.forEach((card) => { %>

      <!-- Wrapping the whole card a link -->
      <a
        href="/cards/<%= card.card_id %>"
        class="p-4 flex flex-col justify-center items-center hover:scale-105 max-w-96 min-w-72" 
      >
      
        
        <!-- Card image -->
        <img src="<%= card.card_image %>" />
        <!-- Card name and card/set number -->
        <h2 class="text-white text-xl"><%= card.card_name %></h2>
        <p class="text-white text-sm">
          <%=card.card_set_number%>/<%=card.Set.no_of_cards%>
        </p>

        <!-- Add to collection button -->

          <button
            class="rounded-full bg-red-500 hover:bg-white text-black h-10 w-10 p-2 m-2 border-2 transition-colors border-gray-300 duration-300 hover:border-red-500 text-center flex items-center justify-center relative "
          >
            <p class="text-2xl font-mono text-gray-700">+</p>
          </button>

      </a>
      <% }) %>
    </div>
    <div>
      <h3>Pages:</h3>
      <% if (pagination.totalPages > 1) { %>
          <% for (let i = 1; i <= pagination.totalPages; i++) { %>
              <a href="/cards/?page=<%= i %>"><%= i %></a>
          <% } %>
      <% } %>
  </div>
    
    <%- include (`partials/footer.ejs`) %>
    <script src="/functions/loadCards.js"></script>
  </body>
<%- include (`partials/tailwindConfig.ejs`) %>
</html>

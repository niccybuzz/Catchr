<!DOCTYPE html>
<html>
  <head>
    <%- include (`partials/header.ejs`) %>
    <title>Browse All Cards</title>
  </head>
  <!-- Body -->
  <body class="box-border h-full bg-pokeballs">
    <!-- Header Bar -->
    <%- include (`partials/nav.ejs`) %>
    <!-- Main grid containing all cards -->
    <div
      class="justify-center items-center h-full grid sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 p-10 overflow-scroll mx-32"
      id="gridDiv"
    >
      <!-- Iterating through each pokemon (row in data) and creates a card object each -->
      <% cardData.forEach((card) => { %>
      <a
        href="#"
        class="p-4 flex flex-col justify-center items-center hover:scale-105 transition-transform h-96 w-64"
      >
        <img src="<%= card.image %>" />
        <h2 class="text-white font-eightbit"><%= card.name %></h2>
      </a>
      <% }) %>
    </div>
  </body>
  <%- include (`partials/footer.ejs`) %>
</html>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Card Details</title>
    <%- include (`partials/header.ejs`) %>
  </head>
  <body
    class="box-border h-screen bg-canvas flex flex-col justify-between font-kanit text-container"
  >
    <!-- Header Bar -->
    <%- include (`partials/nav.ejs`) %>

    <!-- Top section -->
    <div class="h-16 text-center text-container text-3xl pt-6">
      My Collection
    </div>

    <div class="w-full h-16 border-2"></div>

    <!-- Redirecting if collection is empty -->
    <% if (collection.Cards.length == 0) { %>
    <!-- Middle Section -->
    <div class="flex-grow">
      <div
        class="container mx-auto px-4 flex justify-center items-center h-full"
      >
        <div class="text-center">
          <p class="text-2xl mb-4">Your collection is empty.</p>
          <img
            src="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/25.png"
            alt="Pikachu"
            class="w-48 mx-auto"
          />
          <p class="mt-4 text-xl">
            Why not
            <a href="/cards" class="text-blue-500">find some cards</a> to add?
          </p>
        </div>
      </div>
    </div>

    <%} else { %>
      <!-- Grid for all cards -->
    <div
      class="grid justify-center items-center gap-6 px-4 lg:px-36 ws:px-96 h-full grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 ws:grid-cols-5 flex-1"
      id="gridDiv"
    >
      <!-- Iterating through each pokemon (row in data) and creates a card object each -->
      <% cards.forEach((card) => { %>

      <div
        class="flex flex-col justify-center items-center bg-canvas text-black text-container rounded-lg"
      >
        <!-- Wrapping the whole card a link -->
        <a
          href="/cards/<%= card.card_id %>"
          class="p-4 flex flex-col justify-center items-center hover:scale-105 max-w-96 min-w-72"
        >
          <!-- Card image -->
          <img src="<%= card.card_image %>" />
        </a>

        <!-- Container for brief card details and add button -->
        <div class="flex justify-evenly items-center rounded-lg ">
          <!-- Add to collection button -->
          <img
            class="p-2 my-4 max-w-10 min-w-10"
            src="<%= card.Rarity.rarity_icon %>"
          />

          <!-- Card name and card/set number -->
          <div
            class="px-2 flex flex-col justify-center items-center text-center"
          >
            <h2 class="text-lg pt-0 mx-4"><%= card.card_name %></h2>

            <p class="text-sm">
              <%=card.CardCollection.numInCollection%> in collection
            </p>
          </div>

          <a
            class="removeFromCollection"
            card="<%=card.card_id%>"
            collection="<%=collection.collection_id%>"
          >
            <button
              class="rounded-full text-canvas my-4 bg-container hover:bg-white h-7 w-7 border-2 transition-colors border-container duration-300 hover:border-red-500 hover:text-black flex items-center justify-center text-xl text-center relative"
            >
              -
            </button>
          </a>

          <div
            id="popup"
            class="fixed text-canvas z-20 top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 bg-container p-6 flex justify-center items-center shadow-lg rounded-lg"
            style="display: none"
          >
            <p id="popupMessage" class="text-lg mb-4"></p>
            <button
              id="closePopup"
              class="bg-canvas text-container font-bold py-2 px-4 rounded"
            >
              Close
            </button>
          </div>

          <!-- Add to collection button -->
        </div>
      </div>
      <% }) %>
    </div>
    <% } %> <%- include (`partials/footer.ejs`) %>
    <script>
      window.addEventListener("load", () => {
        const removeButtons = document.querySelectorAll(".removeFromCollection");

        removeButtons.forEach((button) => {
          button.addEventListener("click", async function () {
            try {
              const selectedCard = this.getAttribute("card");
              const selectedCollection = this.getAttribute("collection");
              const response = await fetch(
                `/mycollection/remove/?collection=${selectedCollection}&card=${selectedCard}`
              );
              const data = await response.json();
              if (response.ok) {
                document.getElementById("popupMessage").textContent =
                  data;
                document.getElementById("popup").style.display = "block";
              } else {
                alert(data.message);
              }
            } catch (error) {
              console.error("Error:", error);
            }
          });
        });

        document
          .getElementById("closePopup")
          .addEventListener("click", function () {
            document.getElementById("popup").style.display = "none";
            location.reload();
          });
      });
    </script>
  </body>
  <%- include (`partials/tailwindConfig.ejs`) %>
</html>

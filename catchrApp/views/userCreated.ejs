<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include (`partials/header.ejs`) %>
    <title>Register</title>
  </head>
  <body
    class="box-border bg-pokeballsyellow h-screen font-mono"
  >
    <!-- navbar -->
    <div><%- include (`partials/nav.ejs`) %></div>

    <div class="flex flex-col justify-center items-center">
      <!-- Confirmation Box -->
      <div
        class="flex flex-col justify-center items-center bg-black bg-opacity-75 lg:p-16 rounded-full shadow-md h-5/6 w-full lg:w-1/3 justify-self-center"
      >
        <!-- Header Line -->
        <div class="rounded-lg">
          <h2 class="text-4xl font-mono font-bold text-white text-center p-6">
            Welcome, <%= user %>!
          </h2>
        </div>
        <!--  Cute pikachu picture -->
        <img src="images/siteIcons/pikachu.png" class="bg-transparent" />

        <!-- Login button -->
        <button
        class="w-1/4 h-1/2 bg-yellow-300 py-4 rounded-3xl text-center text-black hover:bg-black hover:transition-colors duration-300"
      >
        <a href="/login">Log In</a>
      </button>
      </div>
    </div>
  </body>
  <%- include (`partials/footer.ejs`) %>

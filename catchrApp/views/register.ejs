<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include (`partials/header.ejs`) %>
    <title>Register</title>

  </head>
  <body class="box-border bg-canvas h-screen flex flex-col font-kanit">
    <div>
      <%- include (`partials/nav.ejs`) %>
    </div>
    

    <!-- Full screen size flexbox -->
    <div class="flex justify-center items-center flex-1">
      <!-- Registration Box -->
      <div
        class="flex flex-col justify-center items-center border-4 bg-container border-red-900 p-8 m-8 rounded shadow-md h-fit w-10/12 md:w-1/2 lg:w-1/3 ws:w-1/6 ws:m-20"
      >
        <!-- Header Line -->
        <h2 class="text-2xl font-bold mb-4 text-white text-center">
          User Registration
        </h2>
        <% if (message) { %>
          <p class="text-text bg-red-700 py-1 px-4 rounded-lg">
            <%= message %>
          </p>
        <% } %>
        

        <!-- Main form -->
        <form method="POST" action="/register" class="h-full flex flex-col justify-between w-5/6">
          <div class="m-4">
            <!-- Username box -->
            <label
              for="username"
              class="block text-xl font-medium text-white"
              >Username</label
            >
            <input
              type="text"
              name="username"
              class="mt-1 block w-full h-1/2 rounded-md border-gray-300 shadow-sm"
              minlength="3"
              required
            />
          </div>

          <!-- Email box -->
          <div class="m-4">
            <label for="email" class="block text-xl font-medium text-white"
              >Email</label
            >
            <input
              type="email"
              name="email"
              class="mt-1 block w-full h-1/2 rounded-md border-gray-300 shadow-sm"
              required
            />
          </div>

          <!-- Password box -->
          <div class="m-4">
            <label
              for="password"
              class="block text-xl font-medium text-white"
              >Password</label
            >
            <input
              type="password"
              name="password"
              class="mt-1 block w-full h-1/2 rounded-md border-gray-300 shadow-sm"
              required
            />
            <% if (validpassword == false) { %>
              <p class="text-white font-bold">Passwords do not match.</p>
            <% } %>
          </div>

          <!-- Password confirmation box -->
          <div class="m-4">
            <label
              for="password_confirmation"
              class="block text-xl font-medium text-white"
              >Confirm Password</label
            >
            <input
              type="password"
              name="password_confirmation"
              class="mt-1 block w-full h-1/2 rounded-md border-gray-300"
              required
            />
          </div>

          <!-- Submit button -->
          <div class="h-1/6 m-4 flex justify-center">
            <button
              type="submit"
              class="px-8 py-4 bg-button hover:bg-white text-container rounded-3xl text-center text-2xl font-bold  hover:transition-colors duration-300"
            >
              Submit
            </button>
          </div>

          <a href="/login" class="text-white text-center underline">Already have an account? Log In</a>
        </form>
      </div>
    </div>

    <%- include (`partials/footer.ejs`) %>

</body>
<!-- Scripts etc -->
<%- include (`partials/tailwindConfig.ejs`) %>
</html>

<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include (`partials/header.ejs`) %>
    <title>Login</title>
  </head>
  <body
    class="box-border bg-canvas h-screen flex flex-col font-kanit"
  >
    <%- include (`partials/nav.ejs`) %>

    <!-- Full screen size flexbox -->
    <div
      class="flex items-start pt-6 md:pt-0 md:items-center justify-center flex-1 overflow-y-auto"
    >
      <!-- My account box -->
      <div
        class="flex flex-col justify-center items-center border-4 bg-container border-red-900 border-button p-8 rounded shadow-md h-fit w-10/12 md:w-1/2 xl:w-1/3 ws:w-1/5 ws:m-20 text-text"
      >
        <!-- Header -->
        <h1 class="text-3xl text-text text-center font-bold m-2">
          Account Details
        </h1>

        <!-- Username box -->
        <div
          class="border-2 border-gray-600 border-opacity-50 rounded-lg p-4 text-text text-sm md:text-lg lg:text-xl text-center bg-magmalight w-full m-2 flex justify-between"
        >
          <p>Username:</p>
          <p><%= user.username %></p>
        </div>
        <!-- Email box -->
        <div
          
          class="border-2 border-gray-600 border-opacity-50 bg-magmalight rounded-lg p-4 text-text text-sm md:text-lg lg:text-xl text-center w-full m-2 flex justify-between"
        >
          <p>Email Address:</p>
          <p><%= user.email %></p>
        </div>
        <!-- Buttons -->
        <div
          class="text-container text-sm md:text-base lg:text-lg text-center w-full m-2 flex flex-col md:flex-row justify-between md:justify-evenly"
        >
          <a href="/myaccount/updatedetails" class="">
            <button
              class="bg-button w-full hover:bg-white transition-colors duration-500 rounded-lg py-2 px-2 my-2 font-bold"
            >
              Update Personal Details
            </button>
          </a>
        </div>
        <div
          class="text-container text-sm md:text-base lg:text-lg text-center w-full m-2 flex flex-col md:flex-row justify-between md:justify-evenly"
        >
          <a href="/myaccount/changepassword" class="">
            <button
              class="bg-button w-full hover:bg-white transition-colors duration-500 rounded-lg py-2 my-2 px-8 font-bold"
            >
              Change password
            </button>
          </a>
        </div>
      </div>
    </div>

    <%- include (`partials/footer.ejs`) %>
  </body>
  <!-- Scripts etc -->
  <%- include (`partials/tailwindConfig.ejs`) %>
</html>

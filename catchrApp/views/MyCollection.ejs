<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include (`partials/header.ejs`) %>
    <title>Collections</title>
  </head>
  <body class="box-border bg-canvas flex flex-col font-kanit min-h-screen">
    <%- include (`partials/nav.ejs`) %>

    <!-- Full screen size flexbox -->
    <div class="flex flex-col flex-1 pt-6 p-2 md:pt-0 text-container h-full">
      
      <div class="flex items-center justify-center">
        <h2
          class="text-center self-center m-10 text-3xl font-bold bg-container px-4 py-2 rounded-lg text-canvas max-w-[660px]"
        >
          My Collection
        </h2>
      </div>

      <!-- My Collection -->
      <div id="my-collection" class="flex flex-col w-full">
        <!-- FIrst, checking if the user is logged in -->
        <% if (!user.authen) { %>

        <div class="self-center flex text-xl items-center justify-center">
          <p>
            <a href="/login" class="underline text-blue-600">Sign in</a> to view
            your collection!
          </p>
        </div>
        <!-- If not logged in, show sign in prompt -->
        <% } else { %>

        <!-- Redirecting if collection is empty -->
        <% if (collection.Cards.length == 0) { %>
        <div class="flex-grow">
          <div
            class="container mx-auto my-10 flex justify-center items-center h-full"
          >
            <div class="text-center">
              <p class="text-2xl mb-4">Your collection is empty.</p>
              <img
                src="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/25.png"
                alt="Pikachu"
                class="w-48 mx-auto"
              />
              <p class="mt-4 text-xl">
                Why not
                <a href="/cards" class="text-blue-500">find some cards</a> to
                add?
              </p>
            </div>
          </div>
        </div>

        <%} else { %>

        <!--Showing collection statistics -->
        <%- include ("partials/statsBar.ejs") %>

        <!-- Box for cards/comments buttons -->
        <div class="flex justify-start px-4 lg:px-36 ws:px-96">
          <!-- Cards button -->
          <button
            id="cards-button"
            class="px-2 m-4 relative border-b border-container border-opacity-20 text-container bg-canvas hover:bg-container hover:text-canvas rounded-md transition-colors"
          >
            Cards
          </button>

          <!-- Comments button -->
          <button
            id="comments-button"
            class="px-2 m-4 relative border-b border-container border-opacity-20 text-container bg-canvas hover:bg-container hover:text-canvas rounded-md transition-colors"
          >
            Show Comments
          </button>
        </div>

        <!-- Container for cards and buttons -->
        <div class="flex w-full justify-center items-start">
          <!-- Grid for cards -->
          <div
            class="grid lg:grid justify-center items-center gap-6 px-4 lg:px-12 ws:px-96 h-full grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 lg:w-full"
            id="gridDiv"
          >
            <!-- Iterating through each pokemon (row in data) and creates a card object each -->
            <% cards.forEach((card) => { %>

            <div
              class="flex flex-col justify-center items-center bg-canvas text-black text-container rounded-lg"
            >
            <%- include ("partials/card/cardLink.ejs", {card: card}) %>

              <!-- Container for brief card details and add button -->
              <div class="flex justify-evenly items-center rounded-lg">
         

                <%- include ("partials/card/cardInfoBox.ejs", {card: card}) %>
              </div>
            </div>
            <% }) %>
          </div>

          <!-- Box for comments -->
          <div id="comments-div" class="flex-col w-full items-center lg:w-1/4 lg:mr-32 hidden ">
            <div class="w-full flex flex-col justify-start text-center items-center lg:border-2 border-text border-opacity-30">
              <h1 class="text-2xl m-6">Comments</h1>

              <% if (!user.authen) { %>
              <p>Sign in to post a comment</p>
              <% } else { %>
              <form
                action="/collections/comment/<%=collection.collection_id%>"
                method="POST"
                class="w-full flex flex-col justify-center items-center"
              >
                <h2 class="my-4">Leave a comment</h2>
                <div class="flex justify-between w-full pl-2">
                  <input
                    type="text"
                    name="comment"
                    class="rounded-md border border-container border-opacity-45"
                    placeholder=" Comment"
                  />
                  <button class="bg-button text-canvas px-2 py-1 mx-2 rounded-lg">Submit</button>
                </div>
              </form>
              <% } %>
              <% if (comments) { %>
              <div class="flex flex-col w-96">
                <% comments.forEach((comment) => { %>
                <div class="flex items-center justify-between text-start">
                  <div class="flex flex-col p-4">
                    <h4 class="italic font-bold">
                      <%= comment.User.username%> says:
                    </h4>

                    <p><%= comment.comment_body %></p>
                  </div>
                  <% if (comment.isMine) { %>
                  <a class="deletebutton" comment=" <%= comment.comment_id %> ">
                    <button
                      class="bg-button rounded-lg text-xs px-2 py-1 h-8 w-16"
                    >
                      Delete
                    </button>
                  </a>
                  <% } %>
                </div>
                <%}) %>
              </div>
              <!-- If not comments, show message -->
              <% } else { %>
              <p class="m-6 flex-1 py-20">No Comments</p>
              <% } %>
            </div>
          </div>
        </div>

        <%}} %>
      </div>
    </div>

    <!-- Popup dialogue -->
    <div
      id="popup"
      class="fixed text-canvas text-center max-w-72 z-20 top-1/4 md:top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 bg-container p-6 flex justify-center items-center shadow-lg rounded-lg"
      style="display: none"
    >
      <p id="popupMessage" class="text-lg mb-4"></p>
      <button
        id="closePopup"
        class="bg-canvas text-container font-bold py-2 px-4 rounded"
      >
        Close
      </button>
    </div>

    <%- include (`partials/footer.ejs`) %>

    <script src="/functions/addRemoveCards.js"></script>
    <script src="/functions/commentsButtonsToggle.js"></script>
    <script src="/functions/addRemoveComments.js"></script>
  </body>
  <!-- Scripts etc -->
  <%- include (`partials/tailwindDark.ejs`) %>
</html>

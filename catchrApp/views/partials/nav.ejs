<!-- Global nav container -->
<% include (`header.ejs`) %>
<nav class="flex justify-between items-center">
  <!-- Icon -->
  <div id="nav-icon" class="w-1/3 flex justify-start items-start filter invert text-container">
    <a href="/" class="w-10 m-2">
      <img  src="/images/siteIcons/pokeballIcon.png" class="h-full" />
    </a>
    <% if (user.authen) { %>
      <div class="mx-2 text-center self-center hidden md:block md:text-sm lg:text-base">Welcome, <%=user.username%></div>
    <% } %>
  </div>



  <!-- Header -->
  <div class="w-1/3 flex justify-center items-center">
    <h1
      class="h-full font-eightbit text-container text-lg md:text-2xl lg:text-4xl p-2"
    >
      Catchr
    </h1>
  </div>

  <!-- Main container for dropdown menu. Hidden at medium screens and above -->
  <div
    class="relative w-1/3 text-left flex justify-end py-4 px-3 text-container"
  >
    <!-- buttons shwon on medium sizes and up -->
    <div class="hidden md:flex justify-end items-center">
      <a
        href="/cards"
        class="py-1 px-4 mx-2 min-w-24 md:hidden lg:block hover:bg-button hover:text-canvas transition-colors rounded-lg text-center font-kanit"
      >
        Cards
      </a>
      <a
        href="<%= user.authen ? '/mycollection' : '/login' %>"
        class="px-2 mx-2 min-w-24 md:hidden xl:block hover:bg-button hover:text-canvas transition-colors rounded-lg text-center font-kanit"
      >
        <%= user.authen ? "My Collection" : "Log In" %>
      </a>
      <a
        href="<%= user.authen ? '/collections/topcollections' : '/register' %>"
        class="py-1 px-4 mx-2 min-w-24 md:hidden lg:block hover:bg-button hover:text-canvas transition-colors rounded-lg text-center font-kanit"
      >
        <%= user.authen ? "Top Collections" : "Sign Up" %>
      </a>
    </div>
    <!-- The button which when clicked on will toggle "hidden" for the dropdown options below -->
    <button
      id="menu-button"
      class="inline-flex items-center justify-center max-w-8 min-w-8 max-h-8 min-h-8 rounded-md shadow-sm bg-button transition-colors hover:ring-1 ring-container"
    >
      <img
        class="w-5/6"
        src="https://upload.wikimedia.org/wikipedia/commons/thumb/b/b2/Hamburger_icon.svg/1280px-Hamburger_icon.svg.png"
      />
    </button>

    <%- include("mainMenuOptions.ejs") %>
  </div>
</nav>

<script src="/functions/dropdownmenu.js"></script>



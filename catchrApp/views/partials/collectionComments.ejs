<div class="w-full flex flex-col justify-center items-center">
  <h1 class="text-2xl m-6">Comments</h1>

  <% if (!user.authen) { %>
  <p>Sign in to post a comment</p>
  <% } else { %>
  <form
    action="/collections/comment/<%=collection.collection_id%>"
    method="POST"
    class="w-full flex flex-col justify-center items-center"
  >
    <h2 class="m-4">Leave a comment</h2>
    <div>
      <input
        type="text"
        name="comment"
        class="rounded-md border border-container border-opacity-45"
        placeholder=" Comment"
      />
      <button>Submit</button>
    </div>
  </form>
  <% if (comments) { %>
  <div class="flex flex-col w-96">
    <% comments.forEach((comment) => { %>
    <div class="flex items-center justify-between">
      <div class="flex flex-col p-4">
        <h4 class="italic font-bold"><%= comment.User.username%> says:</h4>

        <p><%= comment.comment_body %></p>
      </div>
      <% if (comment.isMine) { %>
      <a class="deletebutton" comment=" <%= comment.comment_id %> ">
        <button class="bg-button rounded-lg text-xs px-2 py-1 h-8 w-16">
          Delete
        </button>
      </a>
      <% } %>
    </div>
    <%}) %>
  </div>
  <!-- If not comments, show message -->
  <% } else { %>
  <p class="m-6 flex-1 py-20">No Comments</p>
  <% }} %> 
</div>
